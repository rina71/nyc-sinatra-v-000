<h2>Edit Figure</h2>
<%= @figure.name %>
<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <h1><label>Name <input type="text" name="figure[name]" id="figure_name"></label></h1>
  <br></br>
  <h4> Titles </h4>
  <% Title.all.each do |title| %>

  <label><%=title.name %></label>
  <input type="checkbox" value="<%=title.id%>" name="figure[title_ids][]" id="title_<%=title.id%>" <%'checked' if @figure.titles.include?(title) %>></input>

  <%end %>
  <h2><label>Create New Title:</h2>

    <input type="text" name="title[name]" id="new_title"></label>
    <br></br>
  <h2>Landmarks </h2>
  <% Landmark.all.each do |landmark| %>
  <label><%=landmark.name %></label>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"<%'checked' if @figure.landmarks.include?(landmark) %>></input>
  <%end %>
  <h2>Create New Landmark: </h2>
  <label>Name: <input type="text" name="landmark[name]" id="new_landmark"></label>
  <label>Year: <input type="text" name="landmark[year_completed]" ></label>
  <input type="submit" value="Edit Figure"/>
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>


